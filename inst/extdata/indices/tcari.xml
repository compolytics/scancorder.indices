<?xml version="1.0" encoding="UTF-8"?>
<SpectralIndex>
    <Name>TCARI</Name>
    <Wavelengths>
        <Band name="R700" min="700" max="700" unit="nm"/>
        <Band name="R670" min="670" max="670" unit="nm"/>
        <Band name="R550" min="550" max="550" unit="nm"/>
    </Wavelengths>
    <MathML>
        <math xmlns="http://www.w3.org/1998/Math/MathML">
            <apply>
                <times/>
                <cn>3</cn>
                <apply>
                    <minus/>
                    <apply>
                        <minus/>
                        <ci>R700</ci>
                        <ci>R670</ci>
                    </apply>
                    <apply>
                        <times/>
                        <cn>0.2</cn>
                        <apply>
                            <minus/>
                            <ci>R700</ci>
                            <ci>R550</ci>
                        </apply>
                        <apply>
                            <divide/>
                            <ci>R700</ci>
                            <ci>R670</ci>
                        </apply>
                    </apply>
                </apply>
            </apply>
        </math>
    </MathML>
    <Metadata>
        <Description>Transformed Chlorophyll Absorption in Reflectance Index (TCARI)</Description>
        <ApplicationGroup>Vegetation</ApplicationGroup>
        <ApplicationMolecularTarget>Leaf pigments</ApplicationMolecularTarget>
        <ApplicationSubtarget>Chlorophyll</ApplicationSubtarget>
        <Species>Wheat</Species>
        <Reference>Tan et al., 2018</Reference>
    </Metadata>
</SpectralIndex>

<?xml version="1.0" encoding="UTF-8"?>
<SpectralIndex>
    <Name>TVI</Name>
    <Wavelengths>
        <Band name="R750" min="750" max="750" unit="nm"/>
        <Band name="R550" min="550" max="550" unit="nm"/>
        <Band name="R670" min="670" max="670" unit="nm"/>
    </Wavelengths>
    <MathML>
        <math xmlns="http://www.w3.org/1998/Math/MathML">
            <apply>
                <times/>
                <cn>0.5</cn>
                <apply>
                    <minus/>
                    <apply>
                        <times/>
                        <cn>120</cn>
                        <apply>
                            <minus/>
                            <ci>R750</ci>
                            <ci>R550</ci>
                        </apply>
                    </apply>
                    <apply>
                        <times/>
                        <cn>200</cn>
                        <apply>
                            <minus/>
                            <ci>R670</ci>
                            <ci>R550</ci>
                        </apply>
                    </apply>
                </apply>
            </apply>
        </math>
    </MathML>
    <Metadata>
        <Description>Transformed Vegetation Index, Triangular Vegetation Index (TVI)</Description>
    </Metadata>
</SpectralIndex>
